<format file="NPCTextAudio.dat">
    <field name="Id"                    type="string"   unique="true" />
    <field name="CharactersKey"         type="r64"      ref="Characters" />
    <field name="Text"                  type="string" />
    <field name="Mono_AudioFile"        type="string"   path="ogg" />
    <field name="Stereo_AudioFile"      type="string"   since="2.1" path="ogg" />
    <field name="HasStereo"             type="bool"     since="2.1" />
    <field name="Flag0"                 type="bool"     since="2.1" />
    <field name="Inflection"            type="string"   since="3.0" /> <!-- the inflection identifier used for i18n in related fields -->
    <field name="Unknown0"              type="i32"      since="3.12" />
    <field name="Unknown1"              type="i32"      since="3.12" />
    <field name="Unknown2"              type="i32"      since="3.12" />
    <field name="NPCKeys"               type="i64[]"    since="3.13" />
    <field name="Unknown3"              type="r64"      since="3.14" /> <!-- always null -->
</format>
